<!DOCTYPE html>
<html lang="en">
<%- include('partials/scripts.ejs') %>

  <body>
    <%- include('partialsDB/homeDBHeader.ejs') %>
      <div class="container">
        <div class="row">
          <div class="col">
            <form method="post" action="/db/users/add-user">
              <form class="needs-validation" novalidate="">
                <div class="row g-3">
                  <div class="col-sm-6">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="" value="" required="" name="name" />
                    <div class="invalid-feedback">
                      Valid first name is required.
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" class="form-control" id="phone" placeholder="" value="" required="" name="phone" />
                    <div class="invalid-feedback">
                      Valid last name is required.
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <label for="username" class="form-label">Username</label>
                    <div class="input-group has-validation">
                      <span class="input-group-text">@</span>
                      <input type="text" class="form-control" id="username" placeholder="Username" required="" name="username" />
                      <div class="invalid-feedback">
                        Your username is required.
                      </div>
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <label for="website" class="form-label">Website <span class="text-muted">(Optional)</span></label>
                    <input type="email" class="form-control" id="website" required="" name="website" />
                  </div>

                  <div class="col-12">
                    <label for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
                    <input type="email" class="form-control" id="email" placeholder="you@example.com" name="email" />
                    <div class="invalid-feedback">
                      Please enter a valid email address for shipping updates.
                    </div>
                  </div>

                  <div class="col-12">
                    <label for="address" class="form-label">Address:</label>
                  </div>

                  <div class="col-12">
                    <label for="street" class="form-label">Street</label>
                    <input type="text" class="form-control" id="street"
                      placeholder="Please enter your shipping address." required="" name="address.street">
                    <div class="invalid-feedback">
                      Please enter your shipping address.
                    </div>
                  </div>

                  <div class="col-5">
                    <label for="suite" class="form-label">Suite</label>
                    <input type="text" class="form-control" id="suite" placeholder="Apartment or suite" required="" name="address.suite">
                    <div class="invalid-feedback">
                      Please enter your Apartment or suite.
                    </div>
                  </div>

                  <div class="col-4">
                    <label for="city" class="form-label">City</label>
                    <input type="text" class="form-control" id="city" required="" name="address.city">
                    <div class=" invalid-feedback">
                    Please enter your City.
                  </div>
                </div>

                <div class="col-md-3">
                  <label for="zipcode" class="form-label">Zip</label>
                  <input type="text" class="form-control" id="zipcode" required="" name="address.zipcode">
                  <div class="invalid-feedback">
                    Zip code required.
                  </div>
                </div>

                <div class="col-12">
                  <label for="company" class="form-label">Company:</label>
                </div>

                <div class="col-4">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="street" required="" name="company.name">
                </div>

                <div class="col-4">
                  <label for="catchPhrase" class="form-label">Catch Phrase</label>
                  <input type="text" class="form-control" id="catchPhrase" required="" name="company.catchPhrase">
                </div>

                <div class="col-4">
                  <label for="bs" class="form-label">BS</label>
                  <input type="text" class="form-control" id="bs" required="" name="company.bs">
              </div>

                <button class="w-100 btn btn-primary btn-lg" type="submit">
                  Add User
                </button>
              </form>
            </form>
          </div>
        </div>
      </div>
  </body>

</html>